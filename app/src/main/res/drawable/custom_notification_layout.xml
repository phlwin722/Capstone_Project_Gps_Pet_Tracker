<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorControlHighlight"> <!-- Ripple color -->

    <!-- Background with border -->
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Bottom Border -->
            <item>
                <shape android:shape="rectangle">
                    <size android:height="10dp"/>
                    <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
                    <stroke
                        android:width="0dp"
                        android:color="@android:color/transparent"/> <!-- Transparent border -->
                </shape>
            </item>
            <!-- Top Border -->
            <item android:bottom="10dp">
                <shape android:shape="rectangle">
                    <size android:height="10dp"/>
                    <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
                    <stroke
                        android:width="1dp"
                        android:color="#CCCCCC"/> <!-- Border color -->
                </shape>
            </item>
            <!-- Content Background -->
            <item android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white"/> <!-- Background color -->
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
