<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:id="@+id/custom_incorrect_password_interface"
    android:paddingTop="15dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Incorrect password"
        android:textStyle="bold"/>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:text="The password you entered is incorrect. Please try again."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_getCode"
            android:layout_marginRight="10dp"
            app:backgroundTint="@null"
            android:background="@drawable/custom_logout_button"
            android:text="Get Code"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:id="@+id/btn_tryAgain"
            android:background="@drawable/custom_logout_button_cancel"

            android:text="Try Again"/>


    </LinearLayout>
</LinearLayout>