<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:id="@+id/custom_couldnt_find_interface"
    android:paddingTop="20dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp"
    android:layout_height="match_parent">


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We couldn't find your account."
        android:textSize="18dp"
        android:textStyle="bold" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new account?"
        android:textSize="18dp"
        android:textStyle="bold" />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/didfind"
        android:layout_marginTop="10dp"
        android:text="We couldn't find your account, Check your email and try again. "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_create"
            app:backgroundTint="@null"
            android:background="@drawable/custom_logout_button"
            android:layout_marginRight="10dp"
            android:text="Create account"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:id="@+id/btn_tryAgain"
            android:background="@drawable/custom_logout_button_cancel"
            android:text="Try Again"/>



    </LinearLayout>
</LinearLayout>