<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_image_view_pet"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imagePett"
            android:background="@drawable/custom_image_view_user"
            android:src="@drawable/image_default"/>
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/petnamee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="16dp" />
            <TextView
                android:textSize="14dp"
                android:text="h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/petArduinoidd"/>
        </LinearLayout>

        <Button
            android:id="@+id/closee"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/baseline_close_24"
            app:backgroundTint="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/timeConsumee"
            android:textSize="15dp"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distancee"
            android:layout_marginLeft="2dp"
            android:textSize="15dp"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingBottom="3dp">

        <Button
            android:padding="0dp"
            android:id="@+id/StartNavigationn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_logout_button"
            android:text="Start route"
            android:textSize="12dp"
            app:backgroundTint="@null" />

        <Button
            android:padding="0dp"
            android:id="@+id/viewRoutee"
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:layout_width="90dp"
            android:background="@drawable/custom_login_with_google_button"
            android:layout_height="40dp"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:text="Preview Route"/>

    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>